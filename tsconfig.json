{
  "compilerOptions": {
    "target": "es2020", // node 14
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "incremental": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": [
      "es2020",
      "dom"
    ],
  },
  "include": [
    "type/"
  ]
}
