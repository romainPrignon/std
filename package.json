{
  "name": "@romainprignon/std",
  "version": "4.1.0",
  "description": "some useful tools",
  "author": "Romain Prignon <pro.rprignon@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romainPrignon/std.git"
  },
  "engines": {
    "node": "^16",
    "npm": "^8"
  },
  "source": "dist",
  "main": "index.js",
  "types": "index.d.ts",
  "assets": [
    "CHANGELOG.md",
    "LICENSE.md",
    "package-lock.json",
    "package.json",
    "README.md"
  ],
  "bin": {
    "bundle": "./bundle/script/bundle.js"
  },
  "scripts": {
    "postinstall": "gitmoji --init",
    "build": "tsc -p src/",
    "lint": "eslint --cache --ext js,ts src/ test/",
    "fmt": "eslint --fix --ext js,ts src/ test/",
    "test": "jest",
    "test:debug": "npm run test --detectOpenHandles --forceExit --runInBand --no-cache",
    "test:cov": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "changelog": "gitmoji-changelog",
    "version": "npm run changelog && git add CHANGELOG.md",
    "version:patch": "npm version --no-commit-hooks patch -m 'ðŸ”– Release v%s'",
    "version:minor": "npm version --no-commit-hooks minor -m 'ðŸ”– Release v%s'",
    "version:major": "npm version --no-commit-hooks major -m 'ðŸ”– Release v%s'",
    "postversion": "git push --follow-tags",
    "bundle": "./src/script/bundle.js bundle/",
    "deploy": "./src/script/deploy.js",
    "ci:publish:patch": "gh workflow run publish.yml -f version=patch -f",
    "ci:publish:minor": "gh workflow run publish.yml -f version=minor -f",
    "ci:publish:major": "gh workflow run publish.yml -f version=major -f"
  },
  "dependencies": {
    "@sindresorhus/is": "^4.6.0",
    "ix": "^4.6.1",
    "lodash": "^4.17.21",
    "type-fest": "^1.4.0",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.17",
    "@types/node": "^14.18.63",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-functional": "^3.7.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "gitmoji-changelog": "2",
    "gitmoji-cli": "3",
    "husky": "4",
    "jest": "^30.0.0",
    "pinst": "2",
    "ts-jest": "^29.4.0",
    "tsd": "^0.32",
    "typescript": "^4.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build && npm run test:cov"
    }
  }
}
