{
  "name": "@romainprignon/std",
  "version": "4.1.0",
  "description": "some useful tools",
  "author": "Romain Prignon <pro.rprignon@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romainPrignon/std.git"
  },
  "type": "module",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "source": "dist",
  "main": "index.js",
  "types": "index.d.ts",
  "assets": [
    "CHANGELOG.md",
    "LICENSE.md",
    "package.json",
    "README.md"
  ],
  "bin": {
    "bundle": "./bundle/script/bundle.js"
  },
  "scripts": {
    "setup": "husky && gitmoji --init",
    "dev": "concurrently -c auto 'npm:check -- --watch --preserveWatchOutput' 'npm:test -- --watch'",
    "check": "tsgo --noEmit",
    "build": "rm -rf dist/ && tsc -p tsconfig.build.json",
    "lint": "oxlint --type-aware src/ test/ && eslint -c oxlint.config.js --cache src/ test/",
    "fmt": "oxlint --fix src/ test/ && eslint -c oxlint.config.js --fix src/ test/",
    "test": "jest",
    "test:debug": "pnpm run test --detectOpenHandles --forceExit --runInBand --no-cache",
    "test:cov": "pnpm run test --coverage",
    "test:watch": "pnpm run test --watch",
    "changelog": "gitmoji-changelog",
    "version": "pnpm run changelog && git add CHANGELOG.md",
    "version:patch": "pnpm version --no-commit-hooks patch -m 'ðŸ”– Release v%s'",
    "version:minor": "pnpm version --no-commit-hooks minor -m 'ðŸ”– Release v%s'",
    "version:major": "pnpm version --no-commit-hooks major -m 'ðŸ”– Release v%s'",
    "postversion": "git push --follow-tags",
    "bundle": "./src/script/bundle.js bundle/",
    "bundle:cov": "attw --pack bundle/",
    "deploy": "./src/script/deploy.js",
    "ci:publish:patch": "gh workflow run publish.yml -f version=patch -f",
    "ci:publish:minor": "gh workflow run publish.yml -f version=minor -f",
    "ci:publish:major": "gh workflow run publish.yml -f version=major -f"
  },
  "dependencies": {
    "@sindresorhus/is": "^7.1.0",
    "ix": "^7.0.0",
    "lodash": "^4.17.21",
    "type-fest": "^1.4.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@eslint/js": "^9.35.0",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22",
    "@typescript/native-preview": "7.0.0-dev.20250918.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-plugin-n": "^17.23.0",
    "eslint-plugin-oxlint": "^1.16.0",
    "eslint-plugin-promise": "^7.2.1",
    "gitmoji-changelog": "^2.3.0",
    "gitmoji-cli": "^9.7.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "oxlint": "^1.16.0",
    "oxlint-tsgolint": "^0.2.0",
    "pinst": "2",
    "ts-jest": "^29.4.0",
    "tsd": "^0.32",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  }
}
